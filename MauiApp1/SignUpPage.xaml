<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MauiApp1.SignUpPage"
    BackgroundColor="#87D3E8">

    <ScrollView>
        <VerticalStackLayout>

            <!-- Logo Container -->
            <Grid HorizontalOptions="Center" Margin="0,50,0,0">
                <Image Source="logo.png"
               WidthRequest="120"
               HeightRequest="120"
               Aspect="AspectFit" />
            </Grid>

            <!-- Message Container using Border (replacing Frame) -->
            <Border 
          BackgroundColor="White"
          StrokeShape="RoundRectangle 80"
          StrokeThickness="0"
          Padding="30"
          Margin="0,50,0,0">
                <VerticalStackLayout Spacing="15" HorizontalOptions="Fill">

                    <!-- Title -->
                    <Label Text="Register Now!"
                         FontSize="24"
                         FontAttributes="Bold"
                         TextColor="Black"
                         HorizontalTextAlignment="Center" />

                    <!-- Input Fields -->
                    <Entry Placeholder="Email address"
                         Keyboard="Email"
                         HeightRequest="50" />
                    <Entry Placeholder="Username"
                         Keyboard="Text"
                         HeightRequest="50" />
                    <Entry Placeholder="Password"
                         IsPassword="True"
                         HeightRequest="50" />
                    <Entry Placeholder="Confirm Password"
                         IsPassword="True"
                         HeightRequest="50" />

                    <!-- Buttons -->
                    <Button Text="Sign in"
                          BackgroundColor="#87D3E8"
                          TextColor="White"
                          CornerRadius="8"
                          HeightRequest="50" />

                    <Button Text="Go Back"
                          BackgroundColor="#C6EBF5"
                          TextColor="#555"
                          CornerRadius="8"
                          HeightRequest="50"
                          Clicked="GoBackButton_Clicked" />
                </VerticalStackLayout>
            </Border>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
