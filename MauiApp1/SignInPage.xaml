<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MauiApp1.SignInPage"
    BackgroundColor="#87D3E8">

    <ScrollView>
        <VerticalStackLayout>

            <!-- Logo Container -->
            <Grid HorizontalOptions="Center" Margin="0,60,0,0">
                <Image Source="logo.png"
               WidthRequest="200"
               HeightRequest="120"
               Aspect="AspectFit" />
            </Grid>

            <!-- Message Container using Border -->
            <Border 
              BackgroundColor="White"
              StrokeShape="RoundRectangle 50"
              StrokeThickness="0"
              Padding="30"
              Margin="0,50,0,0"
		      HeightRequest="700">
                
				<VerticalStackLayout Spacing="15" HorizontalOptions="Fill">

                    <!-- Title -->
                    <Label Text="Welcome Back!"
                           FontSize="24"
                           FontAttributes="Bold"
                           TextColor="Black"
                           HorizontalTextAlignment="Center"
						   Margin="0,10,0,30"/>

                    <Entry x:Name="EmailEntry" Placeholder="Email address"
                           Keyboard="Email" HeightRequest="50" 
                           TextColor="Black"/>

                    <Entry x:Name="PasswordEntry" Placeholder="Password"
                           IsPassword="True" HeightRequest="50" 
                           TextColor="Black"/>
					
                    <Button Text="Sign in"
							FontSize="15"
                            BackgroundColor="#87D3E8"
                            TextColor="White"
                            CornerRadius="8"
                            HeightRequest="60"
							Margin="0,20,0,5"
                            Clicked="SignInButton_Clicked"/>

                    <Button Text="Sign Up"
							FontSize="15"
                            BackgroundColor="#C6EBF5"
                            TextColor="#555"
                            CornerRadius="8"
                            HeightRequest="60"
                            Clicked="SignUpButton_Clicked" />
                </VerticalStackLayout>
            </Border>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
