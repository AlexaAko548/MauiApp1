<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.TodoPage"
             BackgroundColor="#F5F5F5">

    <Grid RowDefinitions="*, Auto">

        <!-- Main Content -->
        <Grid Grid.Row="0" Margin="20">
            <CollectionView x:Name="TodoListView"
                ItemsSource="{Binding Tasks}"
                BackgroundColor="Transparent"
                Margin="0,0,0,20"
                VerticalOptions="FillAndExpand">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <!-- Task UI components inside a Frame -->
                            <Frame BackgroundColor="grey" Margin="0,8" CornerRadius="12" HasShadow="True">
                                <!-- Gesture Recognizer inside the Frame -->
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnTodoItemTapped" />
                                </Frame.GestureRecognizers>

                                <Grid ColumnDefinitions="Auto, *, Auto" Padding="10,12">
                                    <CheckBox IsChecked="{Binding IsCompleted}" Grid.Column="0" 
                                  Color="Black" VerticalOptions="Center"/>
                                    <Label Text="{Binding Title}" Grid.Column="1" 
                               VerticalOptions="Center" FontSize="16" 
                               LineBreakMode="TailTruncation"/>
                                    <Button Text="ðŸ—‘" BackgroundColor="Transparent"
                                Command="{Binding DeleteCommand}" 
                                Grid.Column="2" 
                                VerticalOptions="Center"
                                Padding="0"
                                Clicked="OnDeleteTaskClicked"/>
                                </Grid>
                            </Frame>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </Grid>

        <!-- Floating Add Task Button -->
        <Grid HorizontalOptions="End" VerticalOptions="EndAndExpand" Padding="0,0,20,20">
            <Grid>
                <!-- Shadow for Button -->
                <BoxView Color="Gray" Opacity="0.3" Margin="0,0,0,4" HeightRequest="10" />
                <Button Text="+" BackgroundColor="#2196F3" TextColor="black"
                        CornerRadius="30" HeightRequest="60" WidthRequest="60"
                        FontSize="28"
                        Clicked="OnAddTaskClicked"
                        BorderWidth="0"
                        Padding="0"/>
            </Grid>
        </Grid>

        <!-- Bottom Navigation -->
        <Grid Grid.Row="1" ColumnDefinitions="*,*,*" 
              Margin="15,10" BackgroundColor="White"
              VerticalOptions="End"
              Padding="0,8">
            <ImageButton Source="icon_tasks.png" Grid.Column="0" HorizontalOptions="Center" 
                         BackgroundColor="red" />
            <ImageButton Source="icon_check.png" Grid.Column="1" HorizontalOptions="Center" 
                         BackgroundColor="red" />
            <ImageButton Source="icon_profile.png" Grid.Column="2" HorizontalOptions="Center" 
                         BackgroundColor="red" />
        </Grid>

    </Grid>
</ContentPage>
